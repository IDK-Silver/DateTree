    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI (uv)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        }
    ]
}